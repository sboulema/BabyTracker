@model ActivityModel

<tr>
    <td>
        @Model.Time.ToShortDateString()
    </td>
    <td>
        Activity
    </td>
    <td>
        <img src="~/img/icon_review_activity.png" width="64" />
    </td>
    <td>
        @Model.Time.ToShortDateString() @Model.Time.ToShortTimeString()<br />
        <h5 class="text-success">@Model.OtherActivity</h5>
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <br />@Model.Note
        }
        @if (!string.IsNullOrEmpty(Model.Filename))
        {
            <br /><a href="~/picture/@Model.Filename" target="_blank"><img src="~/picture/@Model.Filename/thumbnail" width="200" /></a>
        }
    </td>
</tr>