@model Formula

<tr>
    <td>
        @Model.Time.ToShortDateString()
    </td>
    <td>
        Formula
    </td>
    <td>
        <img src="~/img/icon_review_formula.png" width="64" />
    </td>
    <td>
        @Model.Time.ToShortDateString() @Model.Time.ToShortTimeString()<br />
        <h5 class="text-warning">Formula @Model.Amount</h5>
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <br />@Model.Note
        }
    </td>
</tr>