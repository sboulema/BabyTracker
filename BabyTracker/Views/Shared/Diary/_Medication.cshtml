@using BabyTracker.Extensions;

@model BabyTracker.Models.Database.Medication

<tr>
    <td>
        @Model.Time.ToString("dd-MM-yyyy")
    </td>
    <td>
        Medication
    </td>
    <td style="width: 64px;">
        <img src="~/img/icon_review_medication.png" width="64" />
    </td>
    <td>
        @Model.Time.ToDateTimeLocal().ToShortTimeString()<br />
        <h5 class="bt-green-title">@Model.MedicationName @Model.AmountPerTime @Model.Unit</h5>
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <div class="pb-1 my-1 bt-green-background bt-entry-note">@Model.Note</div>
        }
    </td>
    <td>
        <div class="card" id="medication_@Model.Time.ToDateTimeLocal().Ticks">
            <img class="card-img-top" src="~/img/icon_review_medication.png">
            <div class="card-body">
                <h5 class="card-title text-success">@Model.MedicationName @Model.AmountPerTime @Model.Unit</h5>
                <p class="card-text bt-entry-note">@Model.Note</p>
                <small class="text-muted float-right">@Model.Time.ToDateTimeLocal().ToShortDateString() @Model.Time.ToDateTimeLocal().ToShortTimeString()</small>
            </div>
        </div>
    </td>
</tr>