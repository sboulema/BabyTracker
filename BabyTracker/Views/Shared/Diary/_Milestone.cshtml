@using BabyTracker.Extensions;

@model BabyTracker.Models.Database.Milestone

<tr>
    <td>
        @Model.Time.ToString("dd-MM-yyyy")
    </td>
    <td>
        Milestone
    </td>
    <td style="width: 64px;">
        <img src="~/img/icon_review_milestone.png" width="64" />
    </td>
    <td>
        @Model.Time.ToDateTimeLocal().ToShortTimeString()<br />
        <h5 class="bt-green-title">@Model.Name</h5>
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <div class="pb-1 my-1 bt-green-background">@Model.Note</div>
        }
        @if (!string.IsNullOrEmpty(Model.Filename))
        {
            <a href="~/picture/@Model.Filename" target="_blank"><img src="~/picture/@Model.Filename/thumbnail" width="200" /></a>
        }
    </td>
    <td>
        <div class="card" id="milestone_@Model.Time.ToDateTimeLocal().Ticks">
            @if (!string.IsNullOrEmpty(Model.Filename))
            {
                <img class="card-img-top" src="~/picture/@Model.Filename/thumbnail">
            }
            <div class="card-body">
                <h5 class="card-title text-success">@Model.Name</h5>
                <p class="card-text">@Model.Note</p>
                <small class="text-muted float-right">@Model.Time.ToDateTimeLocal().ToShortDateString() @Model.Time.ToDateTimeLocal().ToShortTimeString()</small>
            </div>
            <a href="#" class="btn btn-primary btn-screenshot" onclick="saveCard('milestone_@Model.Time.ToDateTimeLocal().Ticks');return false;"><i class="fas fa-camera"></i> Screenshot</a>
        </div>
    </td>
</tr>