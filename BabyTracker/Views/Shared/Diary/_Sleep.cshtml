@model SleepModel

<tr>
    <td>
        @Model.Time.ToString("dd-MM-yyyy")
    </td>
    <td>
        Sleep
    </td>
    <td>
        <img src="~/img/icon_review_sleep.png" width="64" />
    </td>
    <td>
        @Model.Time.ToShortDateString() @Model.Time.ToLocalTime().ToShortTimeString()<br />
        @if (Model.Duration == "0") {
            <h5 class="card-title text-success">Started sleeping</h5>
        } 
        else 
        {
            <h5 class="card-title text-success">Slept @Model.Duration min</h5>
        }  
        @if (!string.IsNullOrEmpty(Model.Note))
        {
            <br />@Model.Note
        }
    </td>
    <td>
        <div class="card" id="sleep_@Model.Time.Ticks">
            <img class="card-img-top" src="~/img/icon_review_sleep.png">
            <div class="card-body">
                @if (Model.Duration == "0") {
                    <h5 class="card-title text-success">Started sleeping</h5>
                } 
                else 
                {
                    <h5 class="card-title text-success">Slept @Model.Duration min</h5>
                }               
                <p class="card-text">@Model.Note</p>
                <small class="text-muted float-right">@Model.Time.ToShortDateString() @Model.Time.ToLocalTime().ToShortTimeString()</small>
            </div>
        </div>
    </td>
</tr>